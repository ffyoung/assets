<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qianyuan.common.dao.RolePermissiomDao">
    <resultMap id="BaseMap" type="com.qianyuan.common.domain.RolePermission">
        <result column="rid" property="rid" jdbcType="BIGINT"/>
        <result column="pid" property="pid" jdbcType="BIGINT"/>
    </resultMap>
    <insert id="insert" parameterType="com.qianyuan.common.domain.RolePermission">
     insert into t_role_permission (rid, pid)
        values (#{rid,jdbcType=BIGINT}, #{pid,jdbcType=BIGINT})
</insert>
    <!-- 根据角色ID删除-->
    <delete id="deleteByRoleId">
        delete from t_role_permission where rid =  #{id,jdbcType=BIGINT}
    </delete>
</mapper>